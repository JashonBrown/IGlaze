               <form action="/contact" method="post" id="contact_form" style="box-shadow: none;" onsubmit="validateForm(); successSubmit()">
                   <h3>Have a question?</h3>
                   <h5><i>Use the form below to drop us an email!</i></h5>
                   <br>
                   <div id="contact_form_div">
                   <!-- Name input-->
                   <div class="form-group">
                       <div class="input-group" style="width: 100%;">
                           <span class="input-group-addon"><i class="ion-person"></i></span>
                           <input name="name" id="name" placeholder="Full Name" class="form-control" type="text" required>
                       </div>
                   </div>

                   <!-- Phone input-->
                   <div class="form-group">
                       <div class="input-group" style="width: 100%;">
                           <span class="input-group-addon"><i class="ion-ios-telephone"></i></span>
                           <input name="phone" id="phone" placeholder="Phone Number" class="form-control" type="number">
                       </div>
                   </div>

                   <!-- Email input-->
                   <div class="form-group">
                       <div class="input-group" style="width: 100%;">
                           <span class="input-group-addon"><i class="ion-email"></i></span>
                           <input name="email" id="email" placeholder="E-Mail Address" class="form-control" type="text">
                       </div>
                   </div>

                   <!-- Comment input -->
                   <div class="form-group">
                       <div class="input-group" style="width: 100%; height:100%;">
                           <span class="input-group-addon"><i class="ion-edit"></i></span>
                           <textarea class="form-control contactTextArea" id="message" style="height:100%; min-height: 220px;" name="comment"
                                     placeholder="Message" required></textarea>
                       </div>
                   </div>
                   <!-- CAPTCHA -->
                   <div class="col-md-12" align="center" style="padding-top: 8px; padding-bottom: 8px;">
                       <div class="g-recaptcha" data-sitekey="6LccISoUAAAAAPMJ_j2KVeS_6MrRDeYL9mpnX8_b"></div>
                   </div>
                   <!-- Button -->
                   <div class="form-group" align="center">
                       <label class="control-label"></label>
                       <div class="col-md-4"></div>
                       <div class="col-md-4">
                           <button type="submit" class="btn btn-warning" style="width: 100% !important; margin-top: 10px;">
                               Send
                               <span class="ion-paper-airplane"></span>
                           </button>
                       </div>
                       <div class="col-md-4"></div>
                   </div>
                       </div>
