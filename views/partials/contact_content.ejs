<script>
    function myMap() {
        var mylatlng = new google.maps.LatLng(-40.876475, 175.064514);

        var mapOptions = {
            center: mylatlng,
            zoom: 11,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var mapdiv = new google.maps.Map(document.getElementById("mapDiv"), mapOptions);

        var marker = new google.maps.Marker({
            position: mylatlng,
            map: mapdiv,
            title: 'IGlaze'
        });
    }

    $(document).ready(function() {
        function reload_cart() {
            alert('reload cart called');
        }});

    $("#contact_form").submit(function(event) {

        /* stop form from submitting normally */
        event.preventDefault();

        /* get the action attribute from the <form action=""> element */
        var $form = $( this ),
                url = $form.attr( 'action' );

        /* Send the data using post with element id name and name2*/
        var posting = $.post( url, { name: $('#name').val(), phone: $('#phone').val(), email: $('email').val(), message: $('#message').val() } );

        /* Alerts the results */
        posting.done(function( data ) {
            console.log("We submitted");
            reload_cart();
        });
    });



</script>
